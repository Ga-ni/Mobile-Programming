<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.androidtown.lab4.registerActivity">
    <!--TableLayout을 사용하여 view객체들을 배치한다.-->
    <TableRow>
        <TextView
            android:id="@+id/nameT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성명" />
        <!--text를 mainActivity에서 받은 name값으로 업데이트 해준다.-->
        <TextView
        android:id="@+id/nameVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/genderT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"/>
        <!--text를 mainActivity에서 받은 name값으로 업데이트 해준다.-->
        <TextView
            android:id="@+id/genderVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/receiveT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수신여부"
            />
        <!--text를 mainActivity에서 받은 name값으로 업데이트 해준다.-->
        <TextView
            android:id="@+id/receiveVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </TableRow>


    <!--버튼을 오른쪽에 배치하기 위해서 LinearLayout을 이용한다.-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이전"
            android:layout_gravity="right"/>
    </LinearLayout>
</TableLayout>

